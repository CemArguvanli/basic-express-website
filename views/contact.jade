extends layout

block content
    .container
        form(method='post', action='contact/send')
            h1 Contact
            .form-group
                label Name
                input.form-control(type='text', placeholder='Enter Name')
            .form-group
                label Email
                input.form-control(type='email', placeholder='Enter Email')
            .form-group
                textarea.form-control(type='text', placeholder='Search')
              button.btn.btn-default(type='submit') Submit

